<div class="flex justify-center">
  <div class="w-full max-w-lg">
    <h1 class="text-5xl leading-tight font-bold">
      <a href="/">aCart.to</a>
    </h1>
    <h2 class="mb-4 text-2xl text-gray-600">Amazon product bundler and shortener</h2>
  </div>
</div>

<div class="flex justify-center">
  <div class="w-full max-w-lg">
    <div class="flex flex-wrap px-8 pt-6 pb-8 mb-4 bg-white shadow-md rounded">
      <div class="w-full text-center">
        <h2 class="font-semibold text-xl tracking-tight">URL is ready!</h2>
      </div>

      <div class="w-full text-center pt-4">
        <form data-controller="clipboard" data-clipboard-success-message="copied" class="flex">
          <index data-target="clipboard.source" class="w-2/3 rounded-l-lg bg-gray-200 text-gray-700 border font-bold border-gray-200  py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
            <%= @amazon_url %>
          </index>
          <index data-target="clipboard.button" data-action="click->clipboard#copy" class="w-1/3 px-4 rounded-r-lg bg-blue-400  text-gray-100 font-bold p-3 uppercase border-blue-500 border-t border-b border-r hover:bg-blue-500">copy</index>
        </form>
      </div>
      <div class="w-full my-4">
        <a class="leading-tight font-bold text-gray-600" href=<%= @amazon_url %>>

        </a>


        <div class="sm:flex bg-grey-light sm:items-center pt-4 text-center">
          <a href="/" class="w-full px-4 rounded text-blue-400 font-bold p-3 uppercase border-2 border-blue-500 bg-white hover:bg-gray-200">
            New link!
          </a>
        </div>

      </div>
    </div>
  </div>
</div>
