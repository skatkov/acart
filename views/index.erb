<div class="flex justify-center">
  <div class="w-full max-w-lg">
    <div class="flex flex-wrap px-6 pt-6 pb-6 mb-4 bg-white shadow-md rounded">
      <div class="w-full text-center">
        <form class="flex" method="get" action="/">
          <input name="asin" placeholder="AMAZON ASIN" class="w-2/3 rounded-l-lg bg-gray-200 text-gray-700 border border-gray-200  py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"/>
          <input type="submit" value="Add" class="w-1/3 px-4 rounded-r-lg bg-blue-400  text-gray-100 font-bold p-3 uppercase border-blue-500 border-t border-b border-r hover:bg-blue-500"/>
        </form>
        <% if @notice %>
          <p class="text-green-500 text-xs italic pt-2"><%= @notice %></p>
        <% end %>

        <% if @warning %>
          <p class="text-red-500 text-xs italic pt-2"><%= @warning %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="flex justify-center">
  <form class="w-full max-w-lg" method="post" action="/">
    <div class="flex flex-wrap px-8 pt-6 pb-8 mb-4 bg-white shadow-md rounded">
      <div class="w-full text-center">
        <h2 class="font-semibold text-xl tracking-tight">Cart</h2>
      </div>
      <div class="w-full">
        <div class='pb-10'>
          <div class="flex py-2">
            <div class="w-4/5 h-10 py-3 px-1">
              <input name="items[0][asin]" value="B07K8CZ5WT" class="hover:text-blue-500" readonly>

              <a href="https://www.amazon.com/dp/B07K8CZ5WT" target="_blank" class="text-xs text-gray-600 flex items-center">
                www.amazon.com/dp/B07K8CZ5WT
              </a>
            </div>
            <div class="w-1/5 h-10 text-right p-3 cursor-pointer">
              <input value="1"  min="1" max="10" name="items[0][quantity]" type="number" class="w-full text-center bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
            </div>
          </div>
          <div class="flex py-2">
            <div class="w-4/5 h-10 py-3 px-1">
              <input name="items[1][asin]" value="B07QYXD2TH" class="hover:text-blue-500" readonly>
              <a href="https://www.amazon.com/dp/B07QYXD2TH" target="_blank" class="text-xs text-gray-600 flex items-center">
                www.amazon.com/dp/B07QYXD2TH
              </a>
            </div>
            <div class="w-1/5 h-10 text-right p-3 cursor-pointer">
